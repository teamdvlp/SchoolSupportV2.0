<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.activity.SearchActivity" android:gravity="end">

    <LinearLayout
            android:orientation="horizontal"
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="6dp" android:layout_marginTop="5dp"
            android:layout_marginRight="10dp">

        <ImageView
                android:background="@drawable/btn_search"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginTop="9dp" android:layout_marginLeft="5dp"/>

        <EditText
                android:id="@+id/search_bar_edt_search"
                android:imeOptions="actionSearch"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:inputType="text"
                android:text="Android"
                android:layout_marginTop="7dp" android:layout_marginLeft="6dp"/>

    </LinearLayout>
    <TextView
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_search" android:gravity="right"
            android:paddingEnd="25dp" android:paddingTop="15dp" android:layout_marginStart="100dp"
            android:textColor="#000000" android:textSize="16sp"/>

</LinearLayout>